{
	"ignition": {
		"version": "3.4.0",
		"config": {
			"merge": [
				{
					"source": "http://{{ bastion_ip }}:{{ http_port }}/ignition/worker-mca.ign"
				}
			]
		}
	},
	"timeouts": {
		"httpTotal": 15
	},
	"storage": {
	  "files": [
		{
				"group": {},
				"path": "/etc/hostname",
				"user": {},
				"contents": {
					"source": "data:text/plain;base64,{{ worker_hostname_encoded }}",
					"verification": {}
				},
				"mode": 420
		},
		{
				"group": {},
				"path": "/etc/resolv.conf",
				"user": {},
				"contents": {
					"source": "data:text/plain;base64,{{ etc_resolve_encoded }}",
					"verification": {}
				},
				"mode": 420
		},
		{
				"group": {},
				"path": "/etc/NetworkManager/conf.d/90-dns-none.conf",
				"user": {},
				"contents": {
					"source": "data:text/plain;base64,{{ dns_none_encoded }}",
					"verification": {}
				},
				"mode": 420
		}
	  ]
	}
}
